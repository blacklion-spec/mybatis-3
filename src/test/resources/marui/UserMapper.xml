<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marui.mapper.UserMapper">

  <cache>

  </cache>

  <resultMap type="com.marui.entity.User" id="usermap2">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <result column="pwd" property="pwd"/>
  </resultMap>

  <select id="selectUser" resultMap="usermap2">
    select *
    from user
    where id = #{id}
  </select>

  <select id="selectByCondition" resultType="com.marui.entity.User">
    select * from user
    <where>
      <if test="query.id != null">
        id = #{query.id}
      </if>
      <if test="query.name != null">
        id = #{query.name}
      </if>
      <if test="query.pwd != null">
        id = #{query.pwd}
      </if>
    </where>

  </select>


  <insert id="insert">
    insert into user(`id`,`name`, `pwd`)
    values (#{user.id},#{user.name}, #{user.pwd})
  </insert>

</mapper>
